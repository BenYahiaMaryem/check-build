{
  "checkbuild": {
    // "buddyjs"
    "enable": ["jshint", "jscs", "jsinspect", "nsp"]
  },
  "jshint": {
    "args": ["src/**/*.js"]
  },
  "jscs": {
    "args": ["lib/**.js"]
  },
  "jsinspect": {
    "args": ["*.js"],
    "diff": true
  },
  "buddyjs": {
    "args": ["*.js"],
    "ignore": [0, 1, 200]
  },
  "nsp": {}
}
